{% extends 'base.twig' %}

{% block content %}
<div class="m-auto w-4/5">

    <div class="mb-4">
        <div class="text-green-500">
            {{ getSessionMessage() }}
        </div>
    </div>

    <div class="mb-4">
        <a href="/customers/add"
            class="inline-block border border-slate-800 bg-slate-500 hover:bg-slate-700 transition-colors ease-linear delay-100 text-slate-50 p-2">Add
            Customer</a>
    </div>

    <table class="w-full">
        <thead>
            <tr class="border-b border-b-slate-900">
                <th class="py-2 px-2">Last Name</th>
                <th class="py-2">First Name</th>
                <th class="py-2">Address</th>
                <th class="py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
            <tr class="border-b border-slate-900 even:bg-stone-100">
                <td class="py-2 px-2">
                    {{ customer.lastName }}
                </td>
                <td class="py-2 px-2">
                    {{ customer.firstName }}
                </td>
                <td class="py-2 px-2">
                    {{ customer.address }}
                </td>
                <td class="py-2 px-2">
                    <a href="/customers/edit/{{ customer.id }}"
                        class="inline-block border border-slate-800 bg-slate-500 hover:bg-slate-700 transition-colors ease-linear delay-100 text-slate-50 p-2">Edit</a>
                    <a class="inline-block border border-red-800 bg-red-500 hover:bg-red-700 text-white transition-colors ease-linear delay-100 p-2"
                        href="/customers/delete/{{ customer.id }}">Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
